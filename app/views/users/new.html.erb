<% provide(:title, 'Sign up') %>
<div class = "signup"><h1>Now create your access codes.</h1></div>
<div class = "sign_up">
	<fieldset>
		<legend>Please enter your details</legend>
		<br/>
		 <%= form_for(@user) do |f| %>
		 <%= render 'shared/error_messages' %>
          <br />
		  <%= f.label :firstname, "First Name", style: "width:150px;" %>
		  <%= f.text_field :firstname %>
		  <br/>
		  <%= f.label :lastname, "Last Name", style: "width:150px;" %>
		  <%= f.text_field :lastname %>
		  <br/>
		  <%= f.label :username, "User Name", style: "width:150px;" %>
		  <%= f.text_field :username %>
		  <br/>
		  <%= f.label :email, "Email", style: "width:150px;" %>
		  <%= f.text_field :email %>
		  <br/>
		  <%= f.label :password, "Password", style: "width:150px;" %>
		  <%= f.password_field :password %>
		  <br />
		  <%= f.label :password_confirmation, "Confirm Password", style: "width:150px;" %>
		  <%= f.password_field :password_confirmation %>
		  <br />
		  <%= f.submit "Generate", class: "button-style" %><br/>
		<% end %>
	</fieldset>
</div>
