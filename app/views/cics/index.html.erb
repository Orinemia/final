<br /><br />
<table>
  <% @cics.each do |cic| %>     
    <tr class = "<%= cycle('list_line_odd', 'list_line_even' ) %>">
       <td>
         <%= image_tag(cic.image, class:'president_image') %>
       </td>
       <td class = "president_description">
        <dl>
           <dt><%= cic.presidency %>
            <br />
           <dd><%= truncate(strip_tags(cic.biography), length: 80) %></dd>
        <dl>
       </td>

        <td class = "list_actions">
           <%= link_to 'Show', cic %><br />
           <%= link_to 'Edit', edit_cic_path(cic) %><br />
           <%= link_to 'Destroy', cic, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
    </tr>
    <% end %>
</table>
<br />

<%= link_to 'New Cic', new_cic_path %>
