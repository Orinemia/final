<div class = "signup"><h1>Edit User</h1></div>

<%= form_for(@believer) do |f| %>
  <%= render 'shared/error_messages' %>
   <div class = "sign_up">
	<fieldset>
		<legend>Please enter your details</legend>
		  <br />
		  <div class = "field">
		  <%= f.label :firstname, "First Name", style: "width:150px;" %>
		  <%= f.text_field :firstname %>
		  </div>
		  <br/>
		  <div class = "field">
		  <%= f.label :lastname, "Last Name", style: "width:150px;" %>
		  <%= f.text_field :lastname %>
		  </div>
		  <br/>
		  <div class = "field">
		  <%= f.label :email, "Email", style: "width:150px;" %>
		  <%= f.text_field :email %>
		  </div>
		  <br/>
		  <div class = "field">
		  <%= f.label :password, "Password", style: "width:150px;" %>
		  <%= f.password_field :password %>
		  </div>
		  <br />
		  <div class = "field">
		  <%= f.label :password_confirmation, "Confirm Password", style: "width:150px;" %>
		  <%= f.password_field :password_confirmation %>
		  </div>
		  <br />
		  <div class = "actions">
		  <%= f.submit "Update", class: "button-style" %><br/>
		  </div>
		<% end %>
		<div>
			<a href = "http://gravatar.com/emails">change</a>
			<%= gravatar_for @believer %>
		</div>
	</fieldset>
</div>
